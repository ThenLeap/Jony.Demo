<Window x:Class="Jony.Demo.SideMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Jony.Demo.SideMenu.Utils"
        mc:Ignorable="d"
        Icon="/Assets/Images/logo.ico"
        Title="CT检测系统 · 数据统计"
        Height="800"
        Width="1400">

    <!-- 折叠/展开动画 -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="ToggleSidebarButton">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="SidebarLogo"
                                                      Storyboard.TargetProperty="Margin">
                        <EasingThicknessKeyFrame KeyTime="0:0:0.2" Value="10,0,0,0" />
                    </ThicknessAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SidebarBorder"
                                                   Storyboard.TargetProperty="Width">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="50" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

        <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="ToggleSidebarButton">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="SidebarLogo"
                                                      Storyboard.TargetProperty="Margin">
                        <EasingThicknessKeyFrame KeyTime="0:0:0.2" Value="44,0,0,0" />
                    </ThicknessAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SidebarBorder"
                                                   Storyboard.TargetProperty="Width">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="200" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <!-- 侧边栏菜单模板 -->
    <Window.Resources>
        <!-- Expander模板：有子菜单 -->
        <DataTemplate x:Key="ParentMenuTemplate">
            <Expander Style="{DynamicResource ExpanderStyle}" 
                      Background="{DynamicResource SidebarBackgroundBrush}" 
                      Foreground="#BFCBD9"
                      BorderThickness="0" IsExpanded="{Binding IsExpanded}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Expanded">
                        <i:InvokeCommandAction
                            Command="{Binding DataContext.MenuExpanderExpandedCommand, ElementName=MenuPanel}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <Expander.Header>
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="18"
                                   FontFamily="Segoe MDL2 Assets" Foreground="#BFCBD9" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        <TextBlock Grid.Column="1" Text="{Binding Title}" Margin="5,0,0,0" FontSize="14"
                                   VerticalAlignment="Center" />
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <ItemsControl ItemsSource="{Binding ChildMenuBarModel}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="menuRadioGroup"
                                             Style="{DynamicResource ExpanderRadioButtonStyle}"
                                             Tag="{Binding Icon}"
                                             Content="{Binding Title}"
                                             IsChecked="{Binding IsSelected}"
                                             Command="{Binding DataContext.NavigateCommand, ElementName=MenuPanel}"
                                             CommandParameter="{Binding Route}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander.Content>
            </Expander>
        </DataTemplate>

        <!-- RadioButton模板：没有子菜单 -->
        <DataTemplate x:Key="LeafMenuTemplate">
            <RadioButton GroupName="menuRadioGroup"
                         Style="{DynamicResource HomeRadioButtonStyle}"
                         Tag="{Binding Icon}"
                         Content="{Binding Title}"
                         IsChecked="{Binding IsSelected}"
                         Command="{Binding DataContext.NavigateCommand, ElementName=MenuPanel}"
                         CommandParameter="{Binding Route}" />
        </DataTemplate>

        <!-- 模板选择器 -->
        <local:MenuTemplateSelector x:Key="MenuTemplateSelector"
                                    ParentMenuTemplate="{StaticResource ParentMenuTemplate}"
                                    LeafMenuTemplate="{StaticResource LeafMenuTemplate}" />
    </Window.Resources>

    <Border>
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!-- 左侧边栏 -->
            <Border x:Name="SidebarBorder"
                    Grid.Row="0" Grid.RowSpan="2"
                    Background="{DynamicResource SidebarBackgroundBrush}"
                    HorizontalAlignment="Left"
                    Width="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <!-- Logo -->
                    <StackPanel x:Name="SidebarLogo"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="44,0,0,0">
                        <Image Source="/Assets/Images/logo.png"
                               Width="32"
                               Height="32"
                               VerticalAlignment="Center"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Foreground="White"
                                   Text="数据统计"
                                   FontSize="16"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 菜单 -->
                    <StackPanel Grid.Row="1"
                                x:Name="MenuPanel"
                                DataContext="{Binding Navigation, Source={StaticResource Locator}}">
                        <!-- 侧边菜单 -->
                        <ItemsControl ItemsSource="{Binding MenuBarList}"
                                      ItemTemplateSelector="{StaticResource MenuTemplateSelector}" />

                    </StackPanel>
                </Grid>
            </Border>

            <!-- 导航栏 -->
            <Border Grid.Row="0"
                    Grid.Column="1"
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0 1">

                <DockPanel
                    Background="White"
                    LastChildFill="False"
                    DataContext="{Binding Navigation, Source={StaticResource Locator}}"
                    Margin="0">
                    <ToggleButton x:Name="ToggleSidebarButton"
                                  Style="{StaticResource MyToggleButtonStyle}"
                                  DockPanel.Dock="Left"
                                  Cursor="Hand"
                                  Margin="10,0"
                                  FontSize="20"
                                  Foreground="Black" />
                    <!-- 搜索框 -->
                    <hc:SearchBar Width="300"
                                  DockPanel.Dock="Left"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  hc:InfoElement.Placeholder="搜索功能、用户、数据..."
                                  Style="{StaticResource SearchBarPlus}" />

                    <Border
                        DockPanel.Dock="Right">
                        <Grid Margin="20,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <!-- 右侧工具按钮 -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">

                                <!-- 主题切换 -->
                                <ToggleButton Width="40"
                                              Height="40"
                                              Margin="5,0">
                                    <TextBlock Text="&#xE793;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="18" />
                                </ToggleButton>

                                <!-- 通知 -->
                                <Button Width="40"
                                        Height="40"
                                        Margin="5,0">
                                    <TextBlock Text="&#xEA8F;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="18" />
                                </Button>

                                <!-- 消息 -->
                                <Button Width="40"
                                        Height="40"
                                        Margin="5,0">
                                    <TextBlock Text="&#xE8BD;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="18" />
                                </Button>

                                <!-- 全屏 -->
                                <Button Width="40"
                                        Height="40"
                                        Margin="5,0"
                                        Command="{Binding FullScreenCommand}">
                                    <TextBlock Text="&#xE740;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="18" />
                                </Button>

                            </StackPanel>
                        </Grid>
                    </Border>
                </DockPanel>
            </Border>

            <!-- 内容主体 -->
            <Grid Grid.Row="1" Grid.Column="1" Background="White">
                <ContentControl x:Name="PagesContentControl"
                                DataContext="{Binding Navigation, Source={StaticResource Locator}}"
                                Content="{Binding CurrentView}" />
            </Grid>

            <!-- 右侧抽屉 -->
            <hc:Drawer x:Name="SettingsDrawer" MaskCanClose="True">
                <Border Grid.Row="1"
                        Width="300"
                        Background="{DynamicResource RegionBrush}"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{DynamicResource BorderBrush}">
                    <Grid>
                        <TextBlock Text="系统设置"
                                   Margin="10,0,0,0"
                                   Style="{StaticResource TextBlockTitle}"
                                   HorizontalAlignment="Left" />
                    </Grid>
                </Border>
            </hc:Drawer>
        </Grid>
    </Border>
</Window>